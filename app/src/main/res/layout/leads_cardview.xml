<android.support.v7.widget.CardView android:id="@+id/card_view11"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    card_view:cardCornerRadius="1dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:weightSum="1"
        android:id="@+id/Rel1">
        <TextView
            android:id="@+id/name_view_leads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAKESH PATEL"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="Posted 30 min ago"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/time_leads"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/description_leads"
            android:text="Need 1000pcs of Electric fan "
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/name_view_leads" />


    </RelativeLayout>

</android.support.v7.widget.CardView>